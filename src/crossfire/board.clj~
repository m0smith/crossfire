(ns crossfire.board)

(defn print-board [world boardid]
  (let [b (boardid world)
        [width height] (:dim world)]
    (doseq [row  (partition width
                            (for [y (range height) x (range width)]
                              (if (get-in b [:coods [x y]]) "!" ".")))]
      (println row))))

(defn empty-coods [world boardid]
  (let [b (boardid world)
        [width height] (:dim world)]
    (for [y (range height)
          x (range width)
          :when (not (get-in b [:coods [x y]]))]
      [x y])))